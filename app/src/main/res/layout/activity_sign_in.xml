<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#90c6c4"
    tools:context=".bottomnavigation.home.sign.SignInActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/buttonSignInBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="每日签到"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sr_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/sign_in_top_bg"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clExplain"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_shadow">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="已连续签到  "
                        android:textColor="@android:color/black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textSignInNumber"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:text="0天"
                        android:textColor="#3F59E2"
                        android:textSize="22sp"
                        app:layout_constraintStart_toEndOf="@id/text1"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="5dp" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="签到可领碳积分，连续签到能获得更多碳积分哦！"
                        android:textSize="10sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text1"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="35dp" />

                    <Button
                        android:id="@+id/buttonSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_corner_orange"
                        android:text="立即签到"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.083" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageCheck1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/check_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text3"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="65dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="第1天"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageCheck1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageCheck2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/check_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text3"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="65dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="第2天"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageCheck1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageCheck3"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/check_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text3"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="65dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="第3天"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageCheck1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageCheck4"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/check_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text3"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="65dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="第4天"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageCheck1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageCheck5"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/check_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text3"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="65dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="第5天"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageCheck1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageCheck6"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/check_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text3"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="65dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="第6天"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageCheck1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageCheck7"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/check_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text3"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="65dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="第7天"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageCheck1" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/sign_in_bottom_bg"/>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>