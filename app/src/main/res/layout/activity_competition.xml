<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sv_competition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_competition_2"
    tools:context=".bottomnavigation.userinfo.competition.CompetitionActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCompetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/buttonCompetitionBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="积分奖金赛"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="280dp"
                    android:background="@drawable/bg_tab_2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_a"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="36dp"
                        android:text="A类"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_b"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="36dp"
                        android:text="B类"
                        android:background="@drawable/bg_tab_1"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_c"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="36dp"
                        android:text="C类"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"/>



                </LinearLayout>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:text="积分池内已有积分"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="37780"
                        android:textColor="#ffffff"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="积分"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:text="6745人已报名"/>

                <TextView
                    android:id="@+id/tv_join_in_or_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="本期未参赛！"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    />

                <Button
                    android:id="@+id/btn_competition"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_btn_4caf50"
                    android:text="报名参加下期比赛"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </ScrollView>



</LinearLayout>

</ScrollView>

